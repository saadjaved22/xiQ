<apex:page title="xiQ Home" controller="XIQHomeController" sidebar="false" docType="html-5.0">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="ie=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <!-- Import the Design System style sheet -->
        <apex:slds />
        
        <apex:includeScript value="{!$Resource.xiQJquery}"/>
        
        
        <script type="text/javascript" charset="utf8">
        $(document).ready(function() {
            var isdisplayButton = '{!JSENCODE(buttonHideShowString)}';
            if(isdisplayButton == 'false') {}                   
        });
                
        function reloadParentWindow(){
            window.top.location.href = '{!JSENCODE(redirectUrl)}';
        }
        
        </script>
        
        <style>
            .frame {
            display: flex;
            width: 98vw;
            height: 100vh;
            margin: 0;
            padding: 0;
            border: 0 none;
            box-sizing: border-box;
            }
            ::-webkit-scrollbar {
            
            background: transparent;  /* optional: just make scrollbar invisible */
            }
            
            .outPanel {
            max-width:98vw;
            }
        </style>
    </head>
    
    <body>
        
        <!-- REQUIRED SLDS WRAPPER -->
        
        <div class="slds-scope">
            <apex:form id="formID">
                <apex:actionFunction name="buildURL" action="{!buildURL}" reRender="theIframe" />
                <apex:outputPanel rendered="{!showContent}">
                    <div class="demo-only">
                        <div class="slds-notify_container slds-is-relative">
                            <div class="slds-notify slds-notify_toast slds-theme_{!HTMLENCODE(successError)}" role="alert">
                                <span class="slds-assistive-text">{!HTMLENCODE(successError)}</span>
                                <span class="slds-icon_container slds-icon-utility-{!HTMLENCODE(successError)} slds-m-right_small slds-no-flex slds-align-top" title="Description of icon when needed">
                                    <svg class="slds-icon slds-icon_small" aria-hidden="true">
                                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/apexpages/slds/latest/assets/icons/utility-sprite/svg/symbols.svg#{!HTMLENCODE(successError)}" />
                                    </svg>
                                </span>
                                <div class="slds-notify__content">
                                    <h2 class="slds-text-heading_small ">{!HTMLENCODE(msg)}</h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </apex:outputPanel>
                
                <apex:outputPanel styleClass="outPanel" rendered="{!!showContent}">
                    <iframe class='frame' src="{!apexqs}" scrolling="true" id="theIframe"/>
                </apex:outputPanel>
            </apex:form>
        </div>
        
    </body>
    
</apex:page>